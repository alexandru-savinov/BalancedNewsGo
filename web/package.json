{
  "name": "newsbalancer-frontend",
  "version": "1.0.0",
  "description": "NewsBalancer Frontend - Vanilla JavaScript with Web Components",
  "main": "src/js/main.js",
  "scripts": {
    "build": "node build.js",
    "dev": "node build.js --dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "serve": "npx http-server src -p 3000 -c-1",
    "lint": "eslint src/js/**/*.js",
    "format": "prettier --write src/**/*.{js,css,html}"
  },
  "keywords": [
    "news",
    "bias-detection",
    "web-components",
    "vanilla-js"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chart.js": "^4.4.0",
    "dompurify": "^3.0.5",
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@testing-library/dom": "^9.0.0",
    "@webcomponents/webcomponentsjs": "^2.8.0",
    "babel-jest": "^30.0.0-beta.3",
    "eslint": "^8.0.0",
    "http-server": "^14.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "prettier": "^3.0.0",
    "puppeteer": "^21.0.0"
  },  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(@webcomponents)/)"
    ],
    "globals": {
      "__DEV__": true
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/**/*.test.js",
      "!js/vendor/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  }
}
