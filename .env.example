# Example environment configuration
# Rename this file to .env and fill in your secrets for local development

# Primary LLM API key (required)
LLM_API_KEY=your_primary_api_key

# Optional secondary API key for fallback
LLM_API_KEY_SECONDARY=your_secondary_api_key

# Optional custom base URL for LLM service
LLM_BASE_URL=https://openrouter.ai/api/v1/chat/completions

# Timeout for HTTP requests to LLM service
LLM_HTTP_TIMEOUT=60s

# Base URL for report generation script
REPORT_BASE_URL=http://localhost:8080

# Disable automatic background analysis (useful for testing)
NO_AUTO_ANALYZE=false

# Database path (defaults to news.db if not set)
DATABASE_URL=news.db

# Gin mode: debug or release
GIN_MODE=debug

# Enable legacy server-side rendering mode
LEGACY_HTML=false

# Health check timeout override (primarily for testing)
HEALTH_CHECK_TIMEOUT_SECONDS=2
