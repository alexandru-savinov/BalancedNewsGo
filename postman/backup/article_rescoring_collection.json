{
  "info": {
    "name": "Article Rescoring Tests",
    "description": "Basic test suite for article rescoring functionality",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "TC1 - Rescore Existing Article (Valid Score)",
      "item": [
        {
          "name": "Create Article",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": {
              "raw": "{{baseUrl}}/api/articles",
              "host": ["{{baseUrl}}"],
              "path": ["api", "articles"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Test Article TC1\",\n  \"content\": \"This is a test article for TC1.\",\n  \"source\": \"test\",\n  \"url\": \"https://example.com/tc1-{{$timestamp}}\",\n  \"pub_date\": \"{{$isoTimestamp}}\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "if (pm.response.code === 200) {",
                  "    var json = pm.response.json();",
                  "    pm.environment.set(\"articleId_TC1\", json.data.article_id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Rescore Article (Valid Score)",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": {
              "raw": "{{baseUrl}}/api/llm/reanalyze/{{articleId_TC1}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "llm", "reanalyze", "{{articleId_TC1}}"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"score\": 0.5\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Get Article (Verify Score)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/articles/{{articleId_TC1}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "articles", "{{articleId_TC1}}"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "pm.test(\"Score updated to 0.5\", function () {",
                  "    var json = pm.response.json();",
                  "    pm.expect(json.data.article.composite_score).to.equal(0.5);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    }
  ]
}