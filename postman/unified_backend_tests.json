                      "        }, () => {});",
                      "    }, 500);",
                      "    // timeout fallback",
                      "    setTimeout(() => {",
                      "        if (!completed) {",
                      "            evtSource.close();",
                      "            pm.expect.fail(\"SSE did not complete within timeout\");",
                      "            done();",
                      "        }",
